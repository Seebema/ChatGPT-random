// Assume that the JSON data is stored in a variable named 'projectsData'
var projectsData = [
    {
      "name": "Project 1",
      "description": "This is a sample project that demonstrates the use of HTML, CSS, and JavaScript.",
      "image": "project1.jpg",
      "link": "https://project1.com"
    },
    {
      "name": "Project 2",
      "description": "This is another sample project that showcases the use of a popular JavaScript library.",
      "image": "project2.jpg",
      "link": "https://project2.com"
    },
    {
      "name": "Project 3",
      "description": "This is a third sample project that demonstrates the use of a CSS framework.",
      "image": "project3.jpg",
      "link": "https://project3.com"
    }
  ]
  
  // Get a reference to the parent container where the project sections will be inserted
  var projectsList = document.getElementById("project-list");
  
  // Iterate through the JSON data and create a new project section for each object
  for (var i = 0; i < projectsData.length; i++) {
    var project = projectsData[i];
  
    // Create a new HTML element for the project section
    var projectSection = document.createElement("li");
    projectSection.classList.add("project-section");
  
    // Create the project name element and add it to the project section
    var projectName = document.createElement("h3");
    projectName.innerHTML = project.name;
    projectSection.appendChild(projectName);
  
    // Create the project image element and add it to the project section
    var projectImage = document.createElement("img");
    projectImage.src = project.image;
    projectSection.appendChild(projectImage);
  
    // Create the project description element and add it to the project section
    var projectDescription = document.createElement("p");
    projectDescription.innerHTML = project.description;
    projectSection.appendChild(projectDescription);
  
    // Create the project link element and add it to the project section
    var projectLink = document.createElement("a");
    projectLink.href = project.link;
    projectLink.innerHTML = "View Project";
  }
